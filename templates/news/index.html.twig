{% extends 'base.html.twig' %}

{% block title %}Новости{% endblock %}

{% block body %}
<h1>Новости</h1>

    {% if news %}
        <table id="news" class="table table-striped">
            <thead>
            <tr>
                <th>Заголовок новости</th>
                <th>Содержимое новости</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for new in news %}
                <tr>
                    <td>{{ new.title }}</td>
                    <td>{{ new.text }}</td>
                    <td>
                        <a href="/news/{{ new.id }}" class="btn btn-dark">Показать</a>
                        <a href="/news/edit/{{ new.id }}" class="btn btn-dark">Редактировать</a>
                        <a href="#" class="btn btn-danger delete-new" data-id="{{ new.id }}">Удалить</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Нет новостей для отображения</p>
    {% endif %}

    <p><a href="/news/create">Добавить новость</a></p>

{% endblock %}

{% block javascripts %}
    <script src="/js/news.js"></script>
{% endblock %}
