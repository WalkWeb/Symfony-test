{% extends 'base.html.twig' %}

{% block title %}Новости{% endblock %}

{% block body %}
<h1>Новости</h1>

    {% if news %}
        <table id="news" class="table table-striped">
            <thead>
            <tr>
                <th>Заголовок новости</th>
                <th>Содержимое новости</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for new in news %}
                <tr>
                    <td>{{ new.title }}</td>
                    <td>{{ new.text }}</td>
                    <td>
                        <a href="/new/{{ new.id }}" class="btn btn-dark">Показать</a>
                        <a href="/new/edit/{{ new.id }}" class="btn btn-dark">Редактировать</a>
                        <a href="#" class="btn btn-danger delete-new" data-id="{{ new.id }}">Удалить</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No news to display</p>
    {% endif %}

{% endblock %}